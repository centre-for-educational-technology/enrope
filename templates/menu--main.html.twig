{% import _self as menus %}
  {#
    We call a macro which calls itself to render the full tree.
    @see http://twig.sensiolabs.org/doc/tags/macro.html
#}



  {{ menus.menu_links(items, attributes, 0, user, logged_in) }}
    {% macro menu_links(items, attributes, menu_level, user, logged_in) %}
        {% import _self as menus %}
        {% if items %}
            {% if menu_level == 0 %}
                <ul{{ attributes.addClass('navbar-nav ml-auto') }}>
            {% else %}
                <ul {{ attributes.addClass('submenu dropdown-menu') }}>
            {% endif %}

            {% if user.hasPermission('administer nodes')  %}
                <li class="nav-item"><a href="{{ path('node.add_page') }}">{{ 'Add content'|t }}</a></li>
            {% endif %}
            {% for item in items %}
                <li class="nav-item">
                    {{ link(item.title, item.url) }}
                    {% if item.below %}
                        {{ menus.menu_links(item.below, attributes, menu_level + 1) }}
                    {% endif %}
                </li>
            {% endfor %}
            {% if logged_in %}
                <li class="nav-item"><a href="{{ path('user.logout.http') }}">{{ 'Logout'|t }}</a></li>
            {% else %}
                <li class="nav-item"><a href="{{ path('user.login.http') }}">{{ 'Login'|t }}</a></li>
            {% endif %}
            </ul>
        {% endif %}
    {% endmacro %}